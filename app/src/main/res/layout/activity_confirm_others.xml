<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    tools:context=".ConfirmOthersActivity">

    <LinearLayout
        android:id="@+id/textview_resident"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center">


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/islandName_button_next"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="@color/colorMain"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:text="완료"
            android:textColor="@color/colorText"
            android:textSize="14sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/photo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/notosans_cjkkr_bold"
        android:includeFontPadding="false"
        android:text="확인 요청"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/photo_ment_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/notosans_cjkkr_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="완료된 재활용 사진입니다\n아래 방법에 따라 올바르게 했는지 확인해주세요"
        android:textColor="@color/black_5"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/photo_square_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_ment_sub"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@color/friendly_green"
        android:contentDescription="@string/image"
        android:src="@drawable/square_photo" />


    <LinearLayout
        android:id="@+id/confirm_others_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_square_others"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/checkbox_checked"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/confirm_others_step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:text="내용물을 깨끗이 비우세요"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/checkbox_checked"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/confirm_others_step2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:text="라벨을 분리하세요"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/checkbox_checked"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/confirm_others_step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:text="뚜껑을 닫고 밟아 부피를 줄이세요"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

        </LinearLayout>






    </LinearLayout>


    <LinearLayout
        android:id="@+id/confirm_step_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_others_steps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp">

        <Button
            android:id="@+id/confirm_others_reject"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="136dp"
            android:layout_height="52dp"
            android:background="@drawable/rounded_rectangle2"
            android:fontFamily="@font/notosans_cjkkr_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="부족해요"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            tools:ignore="HardcodedText"
            android:layout_marginRight="28dp" />

        <Button
            android:id="@+id/confirm_others_approve"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="136dp"
            android:layout_height="52dp"
            android:background="@drawable/rounded_rectangle2"
            android:fontFamily="@font/notosans_cjkkr_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="잘 하셨어요"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />


    </LinearLayout>
</RelativeLayout>