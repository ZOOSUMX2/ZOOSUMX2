<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    tools:context=".menu.MissionFragment">


    <TextView
        android:id="@+id/textview_mission"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/notosans_cjkkr_bold"
        android:gravity="center"
        android:text="나의 미션 현황"
        android:textColor="@color/colorText"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/mission_confirm_recycle"
                android:layout_width="154dp"
                android:layout_height="226dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/mission_card_shape"
                android:elevation="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/confirm_recycle_banner"
                    android:layout_width="44dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mission_card_banner_challenge"
                    android:fontFamily="@font/notosans_cjkkr_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="도전"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp"
                    tools:ignore="HardcodedText,SmallSp,SpUsage" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="89dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/icon_recyclecertify" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/notosans_cjkkr_bold"
                    android:includeFontPadding="false"
                    android:text="재활용 인증"
                    android:textColor="@color/colorText"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/notosans_cjkkr_medium"
                    android:includeFontPadding="false"
                    android:text="재활용 쓰레기를 올바르게\n처리하고, 주변 사람들에게\n인증하세요"
                    android:textColor="@color/black_5"
                    android:textSize="10dp"
                    tools:ignore="HardcodedText,SmallSp,SpUsage" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mission_user_quiz"
                android:layout_width="154dp"
                android:layout_height="226dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/mission_card_shape"
                android:elevation="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_quiz_banner"
                    android:layout_width="44dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mission_card_banner_challenge"
                    android:fontFamily="@font/notosans_cjkkr_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="도전"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp"
                    tools:ignore="HardcodedText,SmallSp,SpUsage" />

                <ImageView
                    android:layout_width="103dp"
                    android:layout_height="102dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/icon_peoplequiz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/notosans_cjkkr_bold"
                    android:includeFontPadding="false"
                    android:text="주민 출제 퀴즈"
                    android:textColor="@color/colorText"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/notosans_cjkkr_medium"
                    android:includeFontPadding="false"
                    android:text="동네 주민들은 어떤\n문제를 냈을까? 궁금하면\n지금 바로 도전!"
                    android:textColor="@color/black_5"
                    android:textSize="10dp"
                    tools:ignore="HardcodedText,SmallSp,SpUsage" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/mission_making_quiz"
                android:layout_width="154dp"
                android:layout_height="226dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/mission_card_shape"
                android:elevation="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/making_quiz_banner"
                    android:layout_width="44dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mission_card_banner_challenge"
                    android:fontFamily="@font/notosans_cjkkr_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="도전"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp"
                    tools:ignore="HardcodedText,SmallSp,SpUsage" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="92dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/icon_quizmaking" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/notosans_cjkkr_bold"
                    android:includeFontPadding="false"
                    android:text="퀴즈 출제하기"
                    android:textColor="@color/colorText"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/notosans_cjkkr_medium"
                    android:includeFontPadding="false"
                    android:text="분리배출에 대한 이야기를\n읽고, 동네 주민들에게\n직접 문제를 내 볼까요?"
                    android:textColor="@color/black_5"
                    android:textSize="10sp"
                    tools:ignore="HardcodedText,SmallSp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mission_random_quiz"
                android:layout_width="154dp"
                android:layout_height="226dp"
                android:background="@drawable/mission_card_shape"
                android:elevation="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/random_quiz_banner"
                    android:layout_width="44dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mission_card_banner_challenge"
                    android:fontFamily="@font/notosans_cjkkr_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="도전"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp"
                    tools:ignore="HardcodedText,SmallSp,SpUsage" />

                <ImageView
                    android:layout_width="108dp"
                    android:layout_height="107dp"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/icon_quiztest" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/notosans_cjkkr_bold"
                    android:includeFontPadding="false"
                    android:text="상식 퀴즈"
                    android:textColor="@color/colorText"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/notosans_cjkkr_medium"
                    android:includeFontPadding="false"
                    android:text="분리배출, 얼마나 알고\n계신가요? 퀴즈로 상식을\n확인해 보세요!"
                    android:textColor="@color/black_5"
                    android:textSize="10dp"
                    tools:ignore="HardcodedText,SmallSp,SpUsage" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.79" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />
</androidx.constraintlayout.widget.ConstraintLayout>