<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    tools:context=".menu.MissionFragment">


    <TextView
        android:id="@+id/textview_mission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나의 미션 현황"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosans_cjkkr_bold"
        android:textSize="16sp"
        android:textColor="@color/colorText"/>


    <LinearLayout
        android:id="@+id/textview_mission_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textview_mission"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>

    <GridView
        android:id="@+id/gridview_mission_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textview_mission_current"
        android:layout_marginTop="16dp"
        android:numColumns="2"
        android:horizontalSpacing="16dp"
        android:verticalSpacing="16dp"
        android:layout_marginHorizontal="26dp" />

</RelativeLayout>