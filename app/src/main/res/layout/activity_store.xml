<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_store"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    tools:context=".StoreActivity">

    <LinearLayout
        android:id="@+id/linearlayout_bar_store"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <!--이전 버튼-->
        <ImageButton
            android:id="@+id/imagebutton_back_store"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            android:background="@color/colorMain"
            android:contentDescription="@string/image"
            android:src="@drawable/arrow_back" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/notosans_cjkkr_bold"
        android:gravity="center"
        android:text="@string/store"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="16dp"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:id="@+id/linearlayout_mycoin_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_bar_store"
        android:layout_marginEnd="16sp"
        android:gravity="end"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--includeFontPadding = "false" : noto font 작용 시 발생하는 상하여백 제거-->
        <TextView
            android:id="@+id/textview_mypoint_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="8sp"
            android:layout_marginBottom="-5dp"
            android:drawablePadding="5sp"
            android:fontFamily="@font/notosans_cjkkr_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="3sp"
            android:paddingBottom="3sp"
            android:textAlignment="center"
            android:textSize="18dp"
            app:drawableEndCompat="@drawable/mypage_coin"
            app:drawableRightCompat="@drawable/mypage_coin"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_mycoin_store"
        android:orientation="vertical">

        <!--    온누리 상품권 5000원권-->
        <ImageButton
            android:id="@+id/imagebutton_onnuri5000_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10sp"
            android:adjustViewBounds="true"
            android:background="@color/colorMain"
            android:contentDescription="@string/image"
            android:scaleType="fitCenter"
            android:src="@drawable/onnuri_5000" />

        <ImageButton
            android:id="@+id/imagebutton_yongsan10000_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10sp"
            android:layout_marginBottom="-10sp"
            android:adjustViewBounds="true"
            android:background="@color/colorMain"
            android:contentDescription="@string/image"
            android:scaleType="fitCenter"
            android:src="@drawable/yongsan_10000" />

        <ImageButton
            android:id="@+id/imagebutton_yongsan50000_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10sp"
            android:layout_marginBottom="-10sp"
            android:adjustViewBounds="true"
            android:background="@color/colorMain"
            android:contentDescription="@string/image"
            android:scaleType="fitCenter"
            android:src="@drawable/yongsan_50000" />
    </LinearLayout>

</RelativeLayout>