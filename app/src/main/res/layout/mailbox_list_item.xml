<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_mailbox_mailbox_list_item"
    android:layout_width="match_parent"
    android:layout_height="250sp"
    android:background="@drawable/mailbox_background"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="101.6sp"
        android:layout_height="98.9sp"
        android:layout_marginStart="42.9sp"
        android:layout_marginTop="30.2sp"
        android:contentDescription="@string/image"
        android:src="@drawable/stamp" />

    <LinearLayout
        android:layout_width="180sp"
        android:layout_marginTop="55sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_header_mailbox_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_cjkkr_medium"
            android:includeFontPadding="false"
            android:textAlignment="textStart"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_summary_mailbox_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:includeFontPadding="false"
            android:textAlignment="textStart"
            android:textColor="@color/black_5"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/textview_timestamp_mailbox_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5sp"
                android:textColor="@color/colorSoftGray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textview_guoffice_mailbox_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSoftGray"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>