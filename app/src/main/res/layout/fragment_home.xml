<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearlayout_myinfo_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="56sp"
        android:layout_marginRight="16sp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <!--캐릭터 위치 조정하기-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimageview_profileimage_home"
                android:layout_width="104sp"
                android:layout_height="104sp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/penguincrop"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="5dp"
                app:civ_circle_background_color="@color/colorCircleFill" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_plus"
                android:layout_width="34.8sp"
                android:layout_height="46.6sp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/medal_silver" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:orientation="vertical">

            <!--DB 연결 후 수정할 부분-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_username_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_cjkkr_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/friendly_green"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_cjkkr_medium"
                    android:includeFontPadding="false"
                    android:text="님의 "
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textview_island_name_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_cjkkr_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/friendly_green"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_cjkkr_medium"
                    android:includeFontPadding="false"
                    android:text="섬"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="225sp"
                android:layout_height="61sp"
                android:layout_marginTop="12sp"
                android:background="@drawable/rounded_rectangle2"
                android:baselineAligned="false"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp">

                <!--나의 순위-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:text="나의 순위"
                        android:textColor="@color/black_5"
                        android:textSize="10sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textview_ranking_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:text="850"
                        android:textColor="@color/colorText"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--미션 현황-->
                <LinearLayout
                    android:id="@+id/home_mission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:text="미션 현황"
                        android:textColor="@color/black_5"
                        android:textSize="10sp"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textview_complet_mission_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:includeFontPadding="false"
                            android:text="1"
                            android:textColor="@color/colorText"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:includeFontPadding="false"
                            android:text=" / 4"
                            android:textColor="@color/colorText"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>
                </LinearLayout>

                <!--포인트-->
                <LinearLayout
                    android:id="@+id/linearlayout_mypoint_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:includeFontPadding="false"
                        android:text="포인트"
                        android:textColor="@color/black_5"
                        android:textSize="10sp"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textview_mypoint_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/colorText"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5sp"
                            android:src="@drawable/mypage_coin"
                            android:contentDescription="@string/image"
                            android:layout_marginStart="5sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/island"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_myinfo_home">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="78dp"
            android:layout_marginRight="16sp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image"
            android:src="@drawable/island" />

        <!--말풍선은 visibility로 조절-->
        <ImageView
            android:id="@+id/speech_bubble1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140sp"
            android:layout_marginLeft="140sp"
            android:layout_marginTop="80sp"
            android:contentDescription="@string/image"
            android:src="@drawable/speech_bubble1" />

        <ImageView
            android:id="@+id/speech_bubble2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="230sp"
            android:contentDescription="@string/image"
            android:src="@drawable/speech_bubble2" />


    </RelativeLayout>

</RelativeLayout>