<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="306dp"
    android:layout_height="268dp"
    android:background="@drawable/dialog_background"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/resident_to_reward_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/notosans_cjkkr_bold"
        android:text="사용자 정보가\n아직 입력되지 않았어요"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="18dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/resident_to_reward_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resident_to_reward_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="필요한 정보를 모두 입력한 뒤에\n다시 섬으로 돌아와주세요!"
        android:textColor="@color/colorText"
        android:textSize="16dp"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/userInfo_goback"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/resident_to_reward_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_rectangle_orange"
        android:fontFamily="@font/notosans_cjkkr_bold"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:text="사용자 정보 입력하기"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        tools:ignore="HardcodedText,SpUsage" />

</RelativeLayout>